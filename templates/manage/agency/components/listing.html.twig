<div class="list-group mb-3">
	{% for a in agencies %}
		<div class="list-group-item p-0">
			<div class="row g-0">
				<div class="col-md-2 bg-body-secondary d-flex justify-content-center align-items-center"><img src="/uploads/{{a.getLogo}}" height="128" width="128"/></div>
				<div class="col-md-10 p-3" style="height: 192px">
					<h2 class="card-title fw-bold">{{a.getName}}</h2>
					{% if a.getFullname %}
						<h4>{{a.getFullname}}</h4>
					{% endif %}
					{% if a.getLocation %}
						<span>{{a.getLocation}}</span>
					{% endif %}
				</div>
			</div>
		</div>
	{% endfor %}
</div>
