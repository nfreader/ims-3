<header class="navbar sticky-top navbar-expand-lg bg-body-tertiary border-bottom py-2">
	<div class="container-fluid">
		<a class="navbar-brand fw-bold" href="{{url_for('home')}}">{{app.name}}</a>
{% include 'base/sudoModeIcon.html.twig' %}
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse justify-content-between" id="navbarSupportedContent">
			<form class="d-flex" role="search" id="globalNav">
				<div id="globalIncidentControl" class="d-flex">
					<span class="navbar-text me-2">Incident:</span>
					<select name="incident" class="form-select" id="incidentGlobal">
						<option value="" selected disabled>Select an Incident</option>
					</select>
				</div>
				<div id="globalEventControl" class="d-flex">
					<span class="navbar-text mx-2">Event:</span>
					<select name="event" class="form-select" id="eventGlobal">
						<option value="" selected disabled>Select an Event</option>
					</select>
				</div>
			</form>
			{% if app.user %}
				<ul class="navbar-nav d-flex align-items-center">
					<li class="navbar-item">
						{% include 'base/roleChooser.html.twig' with {'reload':true} %}
					</li>
					{% include 'base/authMenu.html.twig' %}
				</ul>

			{% endif %}
		</div>
	</div>
</header>
