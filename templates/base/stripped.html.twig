{% include 'base/header.html.twig' %}
{% block scripts %}{% endblock %}
<header class="navbar sticky-top navbar-expand-lg bg-body-tertiary border-bottom">
	<div class="container">
		<a class="navbar-brand fw-bold" href="{{url_for('home')}}">{{app.name}}</a>
{% include 'base/sudoModeIcon.html.twig' %}
		<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse justify-content-between" id="navbarSupportedContent">
			{% if app.user %}
				<ul class="navbar-nav d-flex align-items-center">
					<li class="navbar-item">
						{% include 'base/roleChooser.html.twig' %}
					</li>
					{% include 'base/authMenu.html.twig' %}
				</ul>
			{% endif %}
		</div>
	</header>

	<main>
		<div class="container py-4">
		{% block body %}{% endblock %}
		</div>
	</main>
{% include 'base/footer.html.twig' %}
