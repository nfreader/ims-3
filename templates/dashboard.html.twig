{% include 'base/header.html.twig' %}
{% include 'base/navbar.html.twig' %}
{% block subnav %}{% endblock %}
<main class="container-fluid">
	<div class="row">
		<aside class="sidebar border-end col-md-3 col-lg-2 p-0 bg-body-tertiary text-truncate" id="sidebar">
			{% block sidebar %}
				<h6 class="px-2 mt-2 mb-1 text-body-secondary text-uppercase d-flex align-items-center justify-content-between">
					<span>Incidents</span>
					<i class="fa-solid fa-sort"></i>
				</h6>
				{% include ['incident/components/'~ layout ~'-listing.html.twig','incident/components/listing.html.twig'] %}
			{% endblock %}
		</aside>
		{% if events %}
				<aside class="sidebar border-end p-0 bg-body-tertiary text-truncate col-2" id="sidebar2">
			{% block sidebar2 %}
				<h6 class="px-2 mt-2 mb-1 text-body-secondary text-uppercase d-flex align-items-center justify-content-between">
					<span>Events</span>
					<i class="fa-solid fa-sort"></i>
				</h6>
				{% include ['event/components/'~ layout ~'-listing.html.twig','event/components/listing.html.twig'] %}
			{% endblock %}
		</aside>
		{% endif %}
		<section class="main-content col px-md-4 py-3 border-start border-4" id="panel"> {% block body %}{% endblock %}
			</section>
		</div>
	</main>
	{{ webpack_entry_script_tags('resizePanel') }}
	{% include 'base/footer.html.twig' %}
